<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.lizardbase.phototagger" android:versionCode="15" android:versionName="1.03">
	<uses-sdk android:minSdkVersion="3" /> 
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="false">
		<activity android:name="Main" android:theme="@android:style/Theme.NoTitleBar"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="TagPhotoAct" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="CameraPreviewAct" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="TakePhotoAct" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="ConfigurationAct" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="DefaultValueAct" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="NetworkAct" android:theme="@android:style/Theme.NoTitleBar"></activity>
	</application>
</manifest>