<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_gravity="center_vertical|center_horizontal"
	android:background="#FFFFFF" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<ScrollView android:layout_height="wrap_content" android:id="@+id/scrollView1"
		android:layout_width="fill_parent" android:fillViewport="true"
		android:layout_weight="1">
		<LinearLayout android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:orientation="vertical">
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Temperature (Â°C): "
					android:textColor="#000000" android:textStyle="bold"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginTop="7dp" android:layout_marginBottom="7dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="     Start: "
					android:textColor="#000000" android:width="90dp"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtStartTmp"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:numeric="signed|decimal"></EditText>
				<ImageButton android:layout_width="wrap_content" android:id="@+id/btnSpkStartTmp"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="     End: "
					android:textColor="#000000" android:width="90dp"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtEndTmp"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:numeric="signed|decimal"></EditText>
				<ImageButton android:layout_width="wrap_content" android:id="@+id/btnSpkEndTmp"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Humidity (%): "
					android:textColor="#000000" android:textStyle="bold"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginTop="7dp" android:layout_marginBottom="7dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="     Start: "
					android:textColor="#000000" android:width="90dp"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtStartHumidity"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:numeric="signed|decimal"></EditText>
				<ImageButton android:layout_width="wrap_content" android:id="@+id/btnSpkStartHumidity"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="     End: "
					android:textColor="#000000" android:width="90dp"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtEndHumidity"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:numeric="signed|decimal"></EditText>
				<ImageButton android:layout_width="wrap_content" android:id="@+id/btnSpkEndHumidity"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Cloud Cover:"
					android:textColor="#000000" android:textStyle="bold"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginTop="7dp" android:layout_marginBottom="7dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<EditText android:layout_height="wrap_content" android:id="@+id/edtCloudCover"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="7dp" android:editable="false"></EditText>
				<ImageButton android:id="@+id/imgBtnCloudCover"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/cloud" android:background="@drawable/cloud"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Wind Conditions:"
					android:textColor="#000000" android:textStyle="bold"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginTop="7dp" android:layout_marginBottom="7dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<EditText android:layout_height="wrap_content" android:id="@+id/edtWindConditions"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="7dp" android:editable="false"></EditText>
				<ImageButton android:id="@+id/imgBtnWindConditions"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/wind" android:background="@drawable/wind"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Study Site Location: "
					android:textColor="#000000" android:textStyle="bold"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginTop="7dp" android:layout_marginBottom="7dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<EditText android:layout_height="wrap_content" android:id="@+id/edtStudySiteLocation"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="7dp" android:height="90dp"></EditText>
				<ImageButton android:layout_width="wrap_content" android:id="@+id/btnSpkStudySiteLocation"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_marginTop="7dp" android:layout_marginBottom="7dp"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#000000"
					android:textStyle="bold" android:text="Length of Transect(m):"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtLengthOfTransect"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:numeric="decimal"></EditText>
				<ImageButton android:layout_width="wrap_content" android:id="@+id/btnSpkLengthOfTransect"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>

			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#000000"
					android:width="95dp" android:textStyle="bold" android:text="Urbanization:"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtUrbanization"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:editable="false"></EditText>
				<ImageButton android:id="@+id/imgBtnUrbanization"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/urbanization" android:background="@drawable/urbanization"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Vegetation Types / Ecosystems: "
					android:textColor="#000000" android:textStyle="bold"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginTop="7dp" android:layout_marginBottom="7dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<EditText android:layout_height="wrap_content" android:id="@+id/edtVegetationTypes"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="7dp" android:height="100dp"
					android:editable="false"></EditText>
				<ImageButton android:id="@+id/imgBtnVegetationTypes"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_gravity="center_vertical" android:src="@drawable/vegetation"
					android:background="@drawable/vegetation"
					android:layout_marginLeft="7dp" android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#000000"
					android:width="90dp" android:textStyle="bold" android:text="Species:"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtSpecies"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:editable="false"></EditText>
				<ImageButton android:id="@+id/imgBtnSpecies"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/species" android:background="@drawable/species"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#000000"
					android:width="147dp" android:textStyle="bold" android:text="Height Above Ground(m):"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtHeightAboveGround"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="7dp" android:numeric="signed|decimal"></EditText>
				<ImageButton android:layout_width="wrap_content" android:id="@+id/btnSpkHeightAboveGround"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#000000"
					android:width="147dp" android:textStyle="bold" android:text="Resting Spot Temperature:"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtRestingSpotTmp"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="7dp" android:numeric="signed|decimal"></EditText>
				<ImageButton android:layout_width="wrap_content"  android:id="@+id/btnSpkRestingSpotTmp"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Behavior/Interactions:"
					android:textColor="#000000" android:textStyle="bold"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginTop="7dp" android:layout_marginBottom="7dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<EditText android:layout_height="wrap_content" android:id="@+id/edtBehavior"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="7dp" android:height="90dp"></EditText>
				<ImageButton android:layout_width="wrap_content"  android:id="@+id/btnSpkBehavior"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Comments:"
					android:textColor="#000000" android:textStyle="bold"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginTop="7dp" android:layout_marginBottom="7dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<EditText android:layout_height="wrap_content" android:id="@+id/edtComments"
					android:layout_width="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="7dp" android:height="90dp"></EditText>
				<ImageButton android:layout_width="wrap_content"  android:id="@+id/btnSpkComments"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_marginTop="7dp" android:layout_marginBottom="7dp"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#000000"
					android:width="90dp" android:textStyle="bold" android:text="Observer(s) Initials:"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtObserverInitials"
					android:layout_width="wrap_content" android:layout_weight="1"></EditText>
				<ImageButton android:layout_width="wrap_content"  android:id="@+id/btnSpkObserverInitials"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_marginTop="7dp" android:layout_marginBottom="7dp"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#000000"
					android:width="90dp" android:textStyle="bold" android:text="Observer email:"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtObserverEmail"
					android:layout_width="wrap_content" android:layout_weight="1"></EditText>
				<ImageButton android:layout_width="wrap_content"  android:id="@+id/btnSpkObserverEmail"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_marginTop="7dp" android:layout_marginBottom="7dp"
				android:layout_width="fill_parent" android:orientation="horizontal">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#000000"
					android:width="90dp" android:textStyle="bold" android:text="Affiliated School:"
					android:layout_marginLeft="7dp" android:layout_marginRight="7dp"
					android:layout_gravity="center_vertical"></TextView>
				<EditText android:layout_height="wrap_content" android:id="@+id/edtAffiliatedSchool"
					android:layout_width="wrap_content" android:layout_weight="1"></EditText>
				<ImageButton android:layout_width="wrap_content"  android:id="@+id/btnSpkAffiliatedSchool"
					android:layout_height="wrap_content" android:background="@drawable/speak"
					android:layout_gravity="center_vertical" android:layout_marginLeft="7dp"
					android:layout_marginRight="13dp"></ImageButton>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:background="@android:drawable/bottom_bar">
		<Button android:text="Back" android:id="@+id/ButtonCancelTag"
			android:layout_width="fill_parent" android:scaleType="centerInside"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_gravity="center" android:drawableLeft="@drawable/cancel"></Button>
		<Button android:text="Save" android:id="@+id/ButtonSaveTag"
			android:layout_width="fill_parent" android:scaleType="centerInside"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_gravity="center" android:drawableLeft="@drawable/save"></Button>
	</LinearLayout>
</LinearLayout>
