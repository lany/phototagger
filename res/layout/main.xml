<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_gravity="center_vertical|center_horizontal"
	android:background="#FFFFFF">
	<ScrollView android:layout_width="fill_parent"
		android:fillViewport="true" android:layout_height="fill_parent"
		android:layout_weight="1">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:orientation="vertical" android:layout_height="fill_parent">
			<LinearLayout android:id="@+id/linearMain"
				android:layout_width="fill_parent" android:layout_gravity="center_vertical|center_horizontal"
				android:layout_height="fill_parent" android:orientation="vertical">
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/imageView1"
					android:src="@drawable/banner" android:layout_gravity="center_horizontal"></ImageView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_gravity="center"
					android:orientation="horizontal" android:layout_height="fill_parent">
					<LinearLayout android:layout_width="fill_parent"
						android:layout_gravity="center"
						android:orientation="vertical" android:layout_height="fill_parent">
						<Button android:layout_height="wrap_content" android:text="@string/capture"
							android:gravity="center_vertical|center_horizontal"
							android:layout_gravity="center_vertical|center_horizontal|center"
							android:id="@+id/buttonCapture" android:layout_width="fill_parent"
							android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
							android:layout_marginTop="5dp" android:height="70dp"
							android:drawableLeft="@drawable/camera"></Button>
						<Button android:layout_height="wrap_content"
							android:layout_gravity="center_vertical|center_horizontal|center"
							android:text="@string/tagphoto" android:id="@+id/buttonTag"
							android:layout_width="fill_parent" android:layout_marginLeft="40dp"
							android:layout_marginRight="40dp" android:layout_marginTop="5dp"
							android:drawableLeft="@drawable/clipboard"></Button>
						<Button android:layout_height="wrap_content"
							android:layout_gravity="center_vertical|center_horizontal|center"
							android:text="@string/config" android:id="@+id/buttonConfig"
							android:layout_width="fill_parent" android:layout_marginLeft="40dp"
							android:layout_marginRight="40dp" android:layout_marginTop="5dp"
							android:drawableLeft="@drawable/config"></Button>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:visibility="gone" android:id="@+id/linearLoading"
				android:layout_width="fill_parent" android:layout_gravity="center_vertical|center_horizontal"
				android:layout_height="fill_parent" android:orientation="horizontal">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_gravity="center_vertical|center_horizontal"
					android:orientation="vertical" android:layout_height="wrap_content">
					<TextView android:id="@+id/textViewLoading"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_gravity="center_vertical|center_horizontal"
						android:textSize="26dp" android:text="loading..."></TextView>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_gravity="center_vertical|center_horizontal"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:orientation="vertical" android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical|center_horizontal"
				android:text="Â© 2011, All rights reserved lizardbase.org, Ver. 1.03"
				android:textSize="11dp" android:layout_marginBottom="5dp"></TextView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
